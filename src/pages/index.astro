---
// Component Imports
import Counter from '../components/Counter';
import Link from '../components/Link/Link';
import Tag from '../components/Tag/Tag';
import Text from '../components/Text/Text';
import DefaultPage from '../layouts/DefaultPage.astro';
import SceneWaves from '../components/SceneWaves/SceneWaves';
const someProps = {
	count: 0,
};

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<DefaultPage title="The blog and portfolio of Ryosuke">
	<SceneWaves client:visible />
	<main>
		<Counter {...someProps} client:visible>
			<Text fontFamily="heading">Hello, React!</Text>
		</Counter>
		<Link href="#">Link to page</Link>
		<Tag>#astrojs</Tag>
		<Text fontFamily="heading" fontSize={6} fontWeight="bold">H1 Header</Text>
	</main>
</DefaultPage>
